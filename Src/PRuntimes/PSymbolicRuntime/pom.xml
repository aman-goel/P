  <modelVersion>4.0.0</modelVersion>

  <groupId>psymbolic</groupId>
  <artifactId>SymbolicRuntime</artifactId>
  <version>1.0</version>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <java.version>16</java.version>

    <abc.jarpath>${project.basedir}/lib</abc.jarpath>
    <yices.jarpath>${project.basedir}/lib</yices.jarpath>
    <z3.jarpath>${project.basedir}/lib</z3.jarpath>
    <cvc5.jarpath>${project.basedir}/lib</cvc5.jarpath>

    <abc.libpath>${project.basedir}/lib</abc.libpath>
    <yices.libpath>${project.basedir}/lib</yices.libpath>
    <z3.libpath>${project.basedir}/lib</z3.libpath>
    <cvc5.libpath>${project.basedir}/lib</cvc5.libpath>
