    <deps.path>${project.basedir}/../../../Bld/deps</deps.path>

    <abc.jarpath>${deps.path}/abc_java_bindings/dist/lib</abc.jarpath>
    <yices.jarpath>${deps.path}/yices2_java_bindings/dist/lib</yices.jarpath>
    <z3.jarpath>${deps.path}/z3/build</z3.jarpath>
    <cvc5.jarpath>${deps.path}/cvc5/build/install/share/java</cvc5.jarpath>

    <abc.libpath>${deps.path}/abc_java_bindings/dist/lib</abc.libpath>
    <yices.libpath>${deps.path}/yices2_java_bindings/dist/lib</yices.libpath>
